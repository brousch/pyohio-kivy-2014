#:import KivyLexer kivy.extras.highlight.KivyLexer

<WhatIsKivyScreen>:
    BoxLayout:
        orientation: 'vertical'
        SlideTitleLabel:
            text: 'What is Kivy?'
        Accordion:
            id: accordion
            AccordionItem:
                CodeInput:
                    id: kv_demo
                    lexer: KivyLexer()
            AccordionItem:
                id: min_app
            AccordionItem:
                id: video_ai
            AccordionItem:
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        font_size: app.font_size_large
                        text: 'Supported Operating Systems'
                    Label:
                        text: 'Windows Vista, 7, 8.1\nOSX 10.7+\nLinux\nAndroid 2.3+\niOS'
            AccordionItem:
                Label:
                    text: 'MIT-licensed Python library for the rapid development of cross-platform applications that make use of innovative user interfaces, such as multi-touch apps.'
