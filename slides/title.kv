<TitleLabel@Label>:
    size_hint_y: None
    height: '80sp'

<TitleScreen>:
    FloatLayout:
        id: title_layout
        size_hint: None, None
        size: self.parent.size
        TitleLabel:
            id: title1
            font_size: app.font_size_xlarge
            text: 'Getting Python'
            center_y: title_layout.center_y + self.height
        TitleLabel:
            id: title2
            font_size: app.font_size_xlarge
            text: 'All Up in Your Mobile'
            center_y: title_layout.center_y
        TitleLabel:
            id: title3
            font_size: app.font_size_xlarge
            text: 'with Kivy'
            center_y: title_layout.center_y - self.height
        TitleLabel:
            id: title4
            font_size: app.font_size_xlarge
            italic: True
            text: 'By Ben Rousch'
