<InfoLabel@Label>:
    size_hint_x: 0.33
    canvas.before:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            source: os.path.join("images", "congruent_outline.png")
            pos: self.pos 
            size: self.size


<InformationScreen>:
    BoxLayout:
        orientation: 'vertical'
        SlideTitleLabel:
            text: 'More Information'
        GridLayout:
            cols: 2
            spacing: '4sp'
            InfoLabel:
                text: 'Ben Rousch (email)'
            Label:
                text: '<brousch@gmail.com>'
            InfoLabel:
                text: 'Ben Rousch (Twitter)'
            Button:
                text: '@brousch'
                on_press: app.open_browser("http://twitter.com/brousch")
            InfoLabel:
                text: 'This Presentation'
            Button:
                text: 'https://github.com/brousch/pyohio-kivy-2014'
                on_press: app.open_browser("https://github.com/brousch/pyohio-kivy-2014")
            InfoLabel:
                text: 'Kivy'
            Button:
                text: 'http://kivy.org/'
                on_press: app.open_browser("http://kivy.org/")
            InfoLabel:
                text: 'Kivy Org Projects'
            Button:
                text: 'https://github.com/kivy'
                on_press: app.open_browser("https://github.com/kivy")
            InfoLabel:
                text: 'Kivy Garden'
            Button:
                text: 'https://github.com/kivy-garden'
                on_press: app.open_browser("https://github.com/kivy-garden")
            InfoLabel:
                text: 'Kivy Crash Course'
            Button:
                text: 'http://inclem.net/pages/kivy-crash-course/'
                on_press: app.open_browser("http://inclem.net/pages/kivy-crash-course/")
                
