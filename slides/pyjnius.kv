<GadgetScatter@Scatter>
    auto_bring_to_front: True
    size_hint: None, None
    size: '300sp', '100sp'
    
    
<GadgetBox@BoxLayout>:
    title: ""
    orientation: 'vertical'
    size: '300sp', '100sp'
    canvas.before:
        Color:
            rgb: 0.25, 0.25, 0.25
        Rectangle: 
            pos: self.pos 
            size: self.size
    Label:
        text: root.title


<PyjniusScreen>:
    BoxLayout:
        orientation: 'vertical'
        SlideTitleLabel:
            text: 'Pyjnius'
        Label:
            size_hint_y: 0.25
            text: 'A Python wrapper for Java classes, which gives you access to most of the Android Java API'
        FloatLayout:
            id: gadget_layout
            GadgetScatter:
                center: gadget_layout.width / 4., (gadget_layout.height / 2.)
                GadgetBox:
                    title: "Battery Status"
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: root.battery_charging
                        Label:
                            text: root.battery_percent
            GadgetScatter:
                center: (gadget_layout.width / 2.), (gadget_layout.height / 2.)
                GadgetBox:
                    title: 'Accelerometer'
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: root.acc_x
                        Label:
                            text: root.acc_y
                        Label:
                            text: root.acc_z
            GadgetScatter:
                center: (gadget_layout.width / 4.) * 3, (gadget_layout.height / 2.)
                GadgetBox:
                    title: 'Text To Speech'
                    BoxLayout:
                        orientation: 'horizontal'
                        TextInput:
                            id: say_this
                            text: "Type here"
                        Button:
                            size_hint_x: 0.33
                            text: "Say It"
                            on_press: root._do_speak(say_this.text)
