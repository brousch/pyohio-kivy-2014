#:import os os

<Placeholder@Image>:
    size: 100, 100
    size_hint: None, None
    source: os.path.join("images", "kivy-logo-black-256.png")

<FloatingButton>:
    docked: False
    font_size: app.font_size_large
    size_hint: None, None
    height: app.font_size_large * 1.5
    width: len(self.text) / 2  * app.font_size_large

<MobileToolchainScreen>:
    BoxLayout:
        orientation: 'vertical'
        SlideTitleLabel:
            text: 'Mobile Toolchain'
        FloatLayout:
            id: treelayout
            Placeholder:
                id: ph_kivy
                center: treelayout.center_x, treelayout.top - self.height
            Placeholder:
                id: ph_py4a
                center: treelayout.center_x / 2, (ph_kivy.center_y + ph_buildozer.center_y) / 2
            Placeholder:
                id: ph_kivyios
                center: treelayout.center_x * 1.5, (ph_kivy.center_y + ph_buildozer.center_y) / 2
            Placeholder:
                id: ph_buildozer
                center: treelayout.center_x, treelayout.center_y
            Placeholder:
                id: ph_pyjnius
                center: treelayout.center_x / 2, (ph_buildozer.center_y + ph_plyer.center_y) / 2
            Placeholder:
                id: ph_pyobjus
                center: treelayout.center_x * 1.5, (ph_buildozer.center_y + ph_plyer.center_y) / 2
            Placeholder:
                id: ph_plyer
                center: treelayout.center_x, self.height
            FloatingButton:
                id: btn_kivy
                text: "kivy"
            FloatingButton:
                id: btn_py4a
                text: "python-for-android"
            FloatingButton:
                id: btn_kivyios
                text: "kivy-ios"
            FloatingButton:
                id: btn_buildozer
                text: "buildozer"
            FloatingButton:
                id: btn_pyjnius
                text: "pyjnius"
            FloatingButton:
                id: btn_pyobjus
                text: "pyobjus"
            FloatingButton:
                id: btn_plyer
                text: "plyer"
