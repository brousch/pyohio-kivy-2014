#:import os os

<Placeholder@Image>:
    size: '75sp', '75sp'
    size_hint: None, None
    source: os.path.join("images", "kivy-logo-black-256.png")

<FloatingButton>:
    docked: False
    bold: True
    background_color: 1,1,1,0.9
    background_normal: os.path.join("images", "white.png")
    color: 0,0,0,0.9
    size_hint: None, None
    height: '75sp'
    width: '250sp'
    on_press: self._dock()

<MobileToolchainScreen>:
    BoxLayout:
        orientation: 'vertical'
        SlideTitleLabel:
            text: 'Mobile Toolchain'
        FloatLayout:
            id: treelayout
            Placeholder:
                id: ph_kivy
                center: treelayout.center_x, treelayout.top - self.height
            Placeholder:
                id: ph_py4a
                center: treelayout.center_x / 2, (ph_kivy.center_y + ph_buildozer.center_y) / 2
            Placeholder:
                id: ph_kivyios
                center: treelayout.center_x * 1.5, (ph_kivy.center_y + ph_buildozer.center_y) / 2
            Placeholder:
                id: ph_buildozer
                center: treelayout.center_x, treelayout.center_y
            Placeholder:
                id: ph_pyjnius
                center: treelayout.center_x / 2, (ph_buildozer.center_y + ph_plyer.center_y) / 2
            Placeholder:
                id: ph_pyobjus
                center: treelayout.center_x * 1.5, (ph_buildozer.center_y + ph_plyer.center_y) / 2
            Placeholder:
                id: ph_plyer
                center: treelayout.center_x, self.height
            FloatingButton:
                id: btn_plyer
                text: "plyer"
                dock_to: ph_plyer
                screen: "Plyer"
            FloatingButton:
                id: btn_pyobjus
                text: "pyobjus"
                dock_to: ph_pyobjus
                screen: "Pyobjus"
            FloatingButton:
                id: btn_pyjnius
                text: "pyjnius"
                dock_to: ph_pyjnius
                screen: "Pyjnius"
            FloatingButton:
                id: btn_buildozer
                text: "buildozer"
                dock_to: ph_buildozer
                screen: "Buildozer"
            FloatingButton:
                id: btn_kivyios
                text: "kivy-ios"
                dock_to: ph_kivyios
                screen: "KivyIOs"
            FloatingButton:
                id: btn_py4a
                text: "python-for-android"
                dock_to: ph_py4a
                screen: "PythonForAndroid"
            FloatingButton:
                id: btn_kivy
                text: "kivy"
                dock_to: ph_kivy
                screen: "WhatIsKivy"
